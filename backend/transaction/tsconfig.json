{
    "compileOnSave": true,
    "compilerOptions": {
       "lib": ["es2019", "dom"],
       "module": "commonjs",
       "esModuleInterop": true,
       "declaration": true,
       "target": "es6",
       "skipLibCheck": true,
       "noImplicitAny": true,
       "moduleResolution": "node",
       "sourceMap": false,
       "outDir": "./dist",
       "baseUrl": ".",
       "resolveJsonModule": true,
       "paths": {
          "*": ["node_modules/*", "src/types/*"]
       }
    },
    "include": ["src/**/*"]
 }